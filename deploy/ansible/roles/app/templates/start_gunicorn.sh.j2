#!/bin/bash
set -e
LOGFILE=/app/assets/log/gunicorn.log
LOGDIR=$(dirname $LOGFILE)
NUM_WORKERS=3
# user/group to run as
USER=root
GROUP=root
PORT=8060
IP=0.0.0.0
SITE={{ app_env }}
cd $SITE
source ./bin/activate
export AERT_assets_CONFIG={{ app_home}}/config.ini
test -d $LOGDIR || mkdir -p $LOGDIR
exec ./bin/gunicorn -b $IP:$PORT -w $NUM_WORKERS \
  --user=$USER --group=$GROUP --log-level=debug --log-file=$LOGFILE \
  assets.webui.wsgi:application 2>>$LOGFILE
